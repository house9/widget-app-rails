<%= form_with(model: customer, class: "contents") do |form| %>
  <% if customer.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

      <ul>
        <% customer.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :country %>
    <select
      name="customer[country]"
      id="countries"
      hx-get="/customers/states"
      hx-target="#states"
    >
      <option>Select Country</option>
      <%= Region.new.countries_html_options %>
    </select>
  </div>

  <div class="my-5">
    <%= form.label :state %>
    <select
      name="customer[state]"
      id="states"
      hx-get="/customers/cities"
      hx-include="#countries"
      hx-target="#cities"
    >
      <option>Select a country first</option>
    </select>
  </div>

  <div class="my-5">
    <%= form.label :city %>
    <select
      name="customer[city]"
      id="cities"
    >
      <option>Select a state first</option>
    </select>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
